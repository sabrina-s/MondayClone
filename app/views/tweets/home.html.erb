<div class="container">

  <div class="row">
    <!-- User profile section, need to show follwers and following count -->
    <div class="col-md-3">
      <div class="h2">Profile</div>
      <% if current_user.avatar? %>
        <%= image_tag current_user.avatar.url, size: "100x100",class: "img-circle" %>
      <% else %>
        <%= image_tag "starfish.png", size: "100x100",class: "img-circle" %>
      <% end %>
    </div>

    <!-- Compose tweet textbox -->
    <div class="col-md-6 tweetbox">
      <%= render partial: "tweetbox" %>
    </div>
  </div>

    <!--Showing list of tweets  -->
  <div class="row">
    <div class="col-md-6 col-md-offset-3 tweets">
        <%= render partial: "tweets" %>
    </div>
  </div>

</div>
