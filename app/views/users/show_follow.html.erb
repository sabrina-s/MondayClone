<% provide(:title, @title) %>
<div class="container">
  <div class="row">
    <aside class="col-md-4">
      <h3><%= @user.username %></h3>
      <div><%= link_to "View my profile", @user %></div>
      <b>Tweets:</b> <%= @user.tweets.count %>
    </aside>
    <div class="col-md-8">
      <h3><%= @title + " " %>(<%= @users.count %>)</h3>
      <% if @users.any? %>
        <ul>
          <% @users.each do |user| %>
            <li><%= link_to user.username, user_path(user) %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</div>